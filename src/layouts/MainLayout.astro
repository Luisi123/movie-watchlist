---
interface Props {
    title?: string;
}

const { title = 'Movie Watchlist' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css">
</head>
<body>
    <header>
        <slot name="header" />
    </header>

    <main>
        <slot />
    </main>

    <footer>
        <slot name="footer" />
    </footer>
</body>
</html>